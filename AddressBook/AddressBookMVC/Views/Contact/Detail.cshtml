@model AddressBook.BLL.Models.ContactViewModel 

@{
    ViewBag.Title = "Detail";
}

<h2>Detail information about @Model.FirstName @Model.LastName</h2>
<div>
    <div>
        <div>
            @Html.LabelFor(m => m.FirstName)
            @Html.DisplayFor(m => m.FirstName)
        </div>
        <div>
            @Html.LabelFor(m => m.LastName)
            @Html.DisplayFor(m => m.LastName)
        </div>
        <div>
            @Html.LabelFor(m => m.Email)
            @Html.DisplayFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Login)
            @Html.DisplayFor(m => m.Login)
        </div>
        <div>
            @Html.LabelFor(m => m.Country)
            @Html.DisplayFor(m => m.Country)
        </div>
        <div>
            @Html.LabelFor(m => m.City)
            @Html.DisplayFor(m => m.City)
        </div>
        <div>
            @Html.LabelFor(m => m.Address)
            @Html.DisplayFor(m => m.Address)
        </div>
            @if (!Model.IsPrivateBirthDate)
            {
                <div>
                    @Html.LabelFor(m => m.BirthDate)
                    @Html.DisplayFor(m => m.BirthDate)
                </div>
            }
         <div>
             @foreach (var phone in Model.Phones)
             {
                <div>
                    <span>@phone.Number</span>
                    <span>@phone.Type.Name</span>
                </div>
             }
         </div>
        <div>
        @if (Model.ImageData != null)
        {
            <div>
                <img class="img-thumbnail" width="400" height="400" src="@Url.Action("GetImage", "Contact",
                        new { id = Model.ContactId })" />
            </div>
        }
        </div>
         <div>
            @Html.ActionLink("Go to contacts", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
